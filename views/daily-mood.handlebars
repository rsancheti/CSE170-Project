	  <h2>DAILY MOOD LOG</h2>
	</div>

	<h1 class="question-title">How are you feeling?</h1>

	<form id="myForm">
	<label>
		<input type="radio" name="moods" value="Happy">
		<img class="left" style="margin-right: 21px" src="../images/Happy.png">
	</label>
	<label>
		<input type="radio" name="moods" value="Meh">
		<img class="right" style="margin-left: 21px" src="../images/Meh.png">
	</label><br />
	<label>
		<input type="radio" name="moods" value="Unhappy">
		<img class="one-inline" src="../images/Unhappy.png">
	</label><br />
	<label>
		<input type="radio" name="moods" value="Crying">
		<img class="left" style="margin-right: 21px" src="../images/Crying.png">
	</label>
	<label>
		<input type="radio" name="moods" value="Angry">
		<img class="right" style="margin-left: 21px" src="../images/Angry.png">
	</label>
</form>
<div class="final-options">
	<a href="./daily-entry">
		<button class="temp-filled-in">Save Mood</button>
	</a>
</div>
</div>
</body>

<script>
  $(document).ready(function(){
 $('#myForm input').on('change', function(){
 	localStorage.clear();
 	localStorage.setItem('moods', $('input[name=moods]:checked', '#myForm').val());
 });
  });
</script>
</html>
