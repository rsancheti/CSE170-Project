<html>
<head>
	<title>Daily Mood Log</title>
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<script src="../js/jquery-1.11.0.js"></script>


	<style>
		body{
			text-align: center;
		}
		h1 {
		  font-family: Roboto;
		  font-size: 30px;
			letter-spacing: 1.42px;
			padding-top: 28px;
		}

		button {
			border: 0px;
			background-color: white;
		}

		label > input {
			visibility: hidden;
			position: absolute;
		}

		label > input + img {
			cursor: pointer;
			border: 2px solid transparent;
			width: 105px;
			height: 105px;
		}

		label > input:checked + img{
			border: 2px solid #33cc99;
		}
		.save{
			text-align: center;
			padding-top: 30px;
		}

			.final-options {
			  margin-top: 36px;
			  margin-bottom: 36px;
			  text-align: center;
			}

			.filled-in {
			  background-color: #33cc99;
			  height: 48px;
			  border-radius: 24px;
			  width: 256px;
				height: 48px;
			  border: none;
			  color: white;
			  text-align: center;
			  text-decoration: none;
			  display: inline-block;
			  font-family: Roboto;
			  font-size: 16px;
			  font-weight: 500;
			  border-radius: 24px;
			  cursor: pointer;
			  margin-top: 16px;
			  margin-bottom: 16px;
			}
		}
	</style>
</head>
<body>
	<h1>How are you feeling today about the issue at hand?</h1>
<!--
	<button class="button" id="happy"><img class="left" src="../images/Happy.png" alt="happy"></button>
	<button class="button" id="meh"><img class="right" src="../images/Meh.png" alt="meh"></button><br />
	<button class="button" id="unhappy"><img class="one-inline" src="../images/Unhappy.png" alt="unhappy"></button><br />
	<button class="button" id="crying"><img class="left" src="../images/Crying.png" alt="crying"></button>
	<button class="button" id="angry"><img class="right" src="../images/Angry.png" alt="angry"></button><br />
-->
	<form id="myForm">
	<label>
		<input type="radio" name="moods" value="Happy.png">
		<img class="left" style="margin-right: 21px" src="../images/Happy.png">
	</label>
	<label>
		<input type="radio" name="moods" value="Meh.png">
		<img class="right" style="margin-left: 21px" src="../images/Meh.png">
	</label><br />
	<label>
		<input type="radio" name="moods" value="Unhappy.png">
		<img class="one-inline" src="../images/Unhappy.png">
	</label><br />
	<label>
		<input type="radio" name="moods" value="Crying.png">
		<img class="left" style="margin-right: 21px" src="../images/Crying.png">
	</label>
	<label>
		<input type="radio" name="moods" value="Angry.png">
		<img class="right" style="margin-left: 21px" src="../images/Angry.png">
	</label>
</form>
	<div class="final-options">
		<a href="/daily-entry">
		<button class="filled-in">Next
		</button>
	</a>

</body>

<script>
  $(document).ready(function(){
 $('#myForm input').on('change', function(){
 	localStorage.setItem('moods', $('input[name=moods]:checked', '#myForm').val());
 });
  });
</script>
</html>
